<p id="notice"><%= notice %></p>

<h1>Your Parking Registration Information</h1>

<%- if @registration.has_neighbors? -%>
  <%- @registration.neighbors.each do |neighbor| -%>
    <%- if neighbor.present? -%>
      <p><%= "Spot #{neighbor.parking_spot_number} is occupied by #{neighbor.first_name} #{neighbor.last_name}." %></p>
    <%- end -%>
  <%- end -%>
<%- else -%>
  <p>You have no neighbors. =(</p>
<%- end -%>


<p>
  <strong>First name:</strong>
  <%= @registration.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @registration.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @registration.email %>
</p>

<p>
  <strong>Parking spot number:</strong>
  <%= @registration.parking_spot_number %>
</p>

<%= link_to 'Edit', edit_registration_path(@registration) %> |
<%= link_to 'Back', registrations_path %>
